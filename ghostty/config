# --------------------------------------------------------------------
# SETTINGS
# Helpful configurator tool: https://ghostty.zerebos.com
# --------------------------------------------------------------------

# Clipboard
clipboard-read = allow
clipboard-write = allow
clipboard-paste-protection = false

# Font
font-size = 15
font-thicken = true

# moonfly theme for Ghostty
# Upstream: github.com/bluz71/vim-moonfly-colors
background = #080808
foreground = #bdbdbd
selection-background = #b2ceee
selection-foreground = #080808
cursor-color = #8e8e8e
palette = 0=#323437
palette = 1=#ff5d5d
palette = 2=#8cc85f
palette = 3=#e3c78a
palette = 4=#80a0ff
palette = 5=#cf87e8
palette = 6=#79dac8
palette = 7=#c6c6c6
palette = 8=#949494
palette = 9=#ff5189
palette = 10=#36c692
palette = 11=#c6c684
palette = 12=#74b2ff
palette = 13=#ae81ff
palette = 14=#85dc85
palette = 15=#e4e4e4

# Disable cursor style being set to bar (instead of block) in shell integration
shell-integration-features = no-cursor
cursor-style = block

# Combine title bar and tabs into one row to save space
macos-titlebar-style = tabs

# Scroll up and down the scrollback buffer
keybind = shift+up=scroll_page_lines:-50
keybind = shift+down=scroll_page_lines:50

# Disable popups that show the size of the terminal
resize-overlay = never

# Open new Ghostty windows in a maximized state
maximize = true

split-divider-color = #323437

# Recommended settings for Claude Code
keybind = shift+enter=text:\n

# --------------------------------------------------------------------
# TEMPORARY WORKAROUNDS FOR CURRENT ISSUES
# --------------------------------------------------------------------

# Add Crtl+F to search scrollback as Ghostty does not support Cmd+F
# https://github.com/ghostty-org/ghostty/issues/189
keybind = "ctrl+f=write_scrollback_file:open"

# Stop showing closing tab warning
# https://github.com/ghostty-org/ghostty/discussions/3070
confirm-close-surface = false
